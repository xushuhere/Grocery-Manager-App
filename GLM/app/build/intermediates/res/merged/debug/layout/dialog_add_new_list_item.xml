<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="480dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.62"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Add a New Item"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding = "5dp"
        android:orientation="vertical"
        android:layout_weight="0.60"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:text="Name"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:textSize="15sp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_item_name"
            android:textColor="#000000"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding = "5dp"
        android:orientation="vertical"
        android:layout_weight="0.52"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Type"
            android:textColor="@color/colorPrimary"
            android:background="@color/white" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/new_item_type"
            android:background="@null"
            android:hint="Item type"
            android:dropDownWidth="match_parent"
            android:minHeight="40dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding = "5dp"
        android:orientation="vertical"
        android:layout_weight="0.57">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:text="Quantity"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/ed_new_item_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:hint="Item Quantity"
            android:textColor="#000000"
            android:background="@null"
            android:inputType="number" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding = "5dp"
        android:orientation="vertical"
        android:layout_weight="0.60">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:text="Unit"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@null"
            android:maxLines="1"
            android:id="@+id/new_item_quantity_unit"
            android:textColor="#000000"
            android:hint="Unit of item" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5">

        <Button
            android:id="@+id/btn_save_and_add_item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Save and add"
            style="@style/buttonStyle"
            android:visibility="visible"
            />

    </LinearLayout>
</LinearLayout>


